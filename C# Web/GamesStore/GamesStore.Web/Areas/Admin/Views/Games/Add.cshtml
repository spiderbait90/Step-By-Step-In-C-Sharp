@using GamesStore.Common.Admin.BindingModels
@using GamesStore.Models
@model GamesStore.Common.Admin.BindingModels.GameBindingModel
@{
    ViewData["Title"] = "Add";
}

<h2 class="text-center">Add Game</h2>

<form asp-area="Admin" asp-controller="Games" asp-action="Add" method="post">
    <span class="text-danger">@TempData["exists"]</span>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" placeholder="Quantity">
        <span class="text-danger" asp-validation-for="Quantity"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImgUrl"></label>
        <input asp-for="ImgUrl" class="form-control" placeholder="Image URL">
        <span class="text-danger" asp-validation-for="ImgUrl"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category" asp-items="@Model.Categories" class="form-control"></select>
        <span asp-validation-for="Category"></span>
        @if (!Model.Categories.Any())
        {
            <a class="btn btn-success" asp-controller="Category" asp-action="Add">Create Category</a>
        }
    </div>

    <button type="submit" class="btn btn-success">Add</button>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back to List</a>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

