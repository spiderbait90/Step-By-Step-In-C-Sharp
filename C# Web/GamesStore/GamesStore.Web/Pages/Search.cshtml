@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model GamesStore.Web.Pages.Search.SearchModel
@{
    Layout = "_Layout";
}
<h2>Search Results: "@Model.SearchTerm"</h2>

<ul>
    @foreach (var b in Model.Games)
    {
        <li><a asp-controller="Games" asp-action="Details" asp-route-id="@(b.Id)">@(b.Name)</a></li>
    }
</ul>
